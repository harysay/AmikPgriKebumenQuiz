<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ECEFF1"
        android:padding="2dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/userMyScoreimageView"
            android:layout_alignTop="@id/txtSkorUserName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/man"
            android:layout_alignBottom="@+id/txtScoreValue" />
        <TextView
            android:id="@+id/txtSkorUserName"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userMyScoreimageView"
            android:gravity="left"
            android:text="Nama"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/titik2Nama"
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/txtSkorUserName"
            android:layout_toEndOf="@+id/txtSkorUserName"
            android:text=":"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/valNamaMyScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Nama saya agak panjang nih"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="20dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/titik2Nama"
            android:layout_toEndOf="@+id/titik2Nama" />

        <TextView
            android:id="@+id/txtScoreValue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Skor"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/userMyScoreimageView"
            android:layout_below="@+id/txtSkorUserName" />

        <TextView
            android:id="@+id/titik2Skor"
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/txtScoreValue"
            android:layout_toEndOf="@+id/txtScoreValue"
            android:layout_below="@+id/titik2Nama"
            android:text=":"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/valScoreValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2000000"
            android:textColor="#000"
            android:textSize="20dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/valNamaMyScore"
            android:layout_toRightOf="@+id/titik2Skor"
            android:layout_toEndOf="@+id/titik2Skor" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>